
<% content_for :title, "soapBox Sign up" %>
<div id="container">

  <div id="content">

    <div id="formContainer">
      <% if (flash[:notice]) %>
        <div id="errorContainer">
          <%= flash[:notice] %>
          <% flash[:notice] = nil %>
        </div>
      <% end %>
      
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

      <div>
        <%= f.email_field :email, :class => 'inputField', :placeholder => 'Enter Company Email', :size => '40'  %>
      </div>

      <div>
        <%= f.password_field :password, :class => 'inputField', :placeholder => 'Password', :size => '40' %>
      </div>

      <div>
        <%= f.password_field :password_confirmation, :class => 'inputField', :placeholder => 'Confirm Password', :size => '30' %>
        <%= f.submit "Sign up",class: "button" %>
      </div>

      <hr>
      <div id="sign_in">
        <span class="normalText"> Already on soapBox? </span> 
        <%= link_to 'Sign In', new_user_session_path, class: "button" %>
      </div>

    <% end %>

    <!--<%= render "devise/shared/links" %> -->
    </div>

    <p class="text">Welcome to soapBox.<br>
    Find out what's happening, right now, with the people and organizations you care about.
    </p>
  </div>
</div>