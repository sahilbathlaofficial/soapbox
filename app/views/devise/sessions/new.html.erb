<% content_for :title, "vTweet Log In" %>
<div id="container">

  <div id="content">

    <div id="formContainer">
      <% if (flash[:notice]) %>
        <div id="errorContainer">
          <%= flash[:notice] %>
          <% flash[:notice] = nil %>
        </div>
      <% end %>
      
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div>
        <%= f.email_field :email, :autofocus => true, :class => 'inputField', :placeholder => 'Email', :size => '40'  %>
      </div>

      <div>
        <%= f.password_field :password, :class => 'inputField', :placeholder => 'Password', :size => '30' %>
        <%= f.submit "Sign in", class: "button" %>
      </div>

      <div>
        <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %> <%= f.label :remember_me, id: 'remember' %>
        <% end -%>
      </div>

      <hr>
      <div id="sign_up">
        <span class="normalText"> New to vTweet? </span> 
        <%= link_to 'Sign up', new_user_registration_path, class: "button" %>
      </div>


    <% end %>

    <!--<%= render "devise/shared/links" %> -->
    </div>

    <p class="text">Welcome to vTweet.<br>
    Find out what's happening, right now, with the people and organizations you care about.
    </p>
  </div>
</div>