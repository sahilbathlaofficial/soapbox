<%for user in users %>
  <div class="showListItem">
    <div class="floatLeft">
      <%= link_to image_tag(user.avatar,width:"50", height: "50", class: "higlightPicture"), user  %>
    </div>

    <div class="middleContent">      
      <div><%=link_to (user.firstname + ' ' + user.lastname).humanize, user %></div>
      <div>This is a sample description</div>
    </div>

    <div class="floatRight">
      <% if(params[:action] == 'pending_memberships') %>
        <%= button_to 'Approve', approve_membership_group_membership_path(user.group_memberships.find_by(group_id: @group.id)), class: 'btn-success', remote: true %>
      <% else %>
        <%= render :partial => 'users/following_status', locals: { user: user } %>
      <% end %>
    </div>

  </div>
<% end %>