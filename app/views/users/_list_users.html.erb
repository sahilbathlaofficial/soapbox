<div id="followingList" class="normalText showList"> 
  <span>Listing all the people in this list</span> 
<%for user in list_users %>
  <hr/>
  <div class="floatLeft"><%= link_to image_tag(user.avatar,width:"50", height: "50", class: "higlightPicture"), user  %></div>
  <div class="rightAlign"><%= render :partial => 'following_status', locals:{ user: user } %></div>
  <div><%=link_to (user.firstname + ' ' + user.lastname).humanize, user %></div>
  <div>This is a sample description</div>
  <hr/>
<% end %>
</div>
<div class="normalText centerAlignText">End of page</div>