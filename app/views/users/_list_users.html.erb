<div id="followingList" class="normalText showList"> 
  <div class="showListItem">Listing all the people in this list</div> 
  <%for user in list_users %> 
    <div class="showListItem">

      <div class="floatLeft">
        <%= link_to image_tag(user.avatar,width:"50", height: "50", class: "higlightPicture"), user  %>
      </div>

      <div class="middleContent">
        <div><%=link_to (user.firstname + ' ' + user.lastname).humanize, user %></div>  
        <div>This is a sample description</div>
      </div>

      <div class="floatRight">
        <%= render :partial => 'following_status', locals:{ user: user } %>
      </div>
    </div>
<% end %>
</div>
<div class="normalText centerAlignText">End of page</div>