 <% if (current_user != user) %>
  <% if (current_user.followees.include?(user)) %>
    <%= button_to('Following', following_path(followee_id: user.id), method: :delete,confirm: "Are you sure you want to unfollow this person?", class: "btn-success original-button" )  %>
    <%= button_to('Unfollow', following_path(followee_id: user.id), method: :delete,confirm: "Are you sure you want to unfollow this person?", class: "btn-danger  hovered-button" ) %>
  <% else %>
    <%= button_to('Follow', followings_path(followee_id: user.id), class: "btn-success")  %>
  <% end %>
<% end %>