 <% if (current_user != user) %>
  <% if (current_user.followees.include?(user)) %>
    <!--following_path expects followee_id (see routes for clearence)-->
    <%= button_to('Following', following_path(user), method: :delete,confirm: "Are you sure you want to unfollow this person?", class: "btn-success original-button" )  %>
    <%= button_to('Unfollow', following_path(user), method: :delete,confirm: "Are you sure you want to unfollow this person?", class: "btn-danger  hovered-button" ) %>
  <% else %>
    <%= button_to('Follow', followings_path(user), class: "btn-success")  %>
  <% end %>
<% end %>